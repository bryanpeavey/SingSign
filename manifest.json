{
  "manifest_version": 3,
  "name": "SingSign Extension",
  "version": "1.0",
  "description": "Learn American Sign Language while listening to your favorite songs!",
  "action": {
    "default_popup": "popup.html",
    "default_title": "SingSign"
  },
  "web_accessible_resources": [
  {
    "resources": ["assets/*.png", "config.json"],
    "matches": ["<all_urls>"]
  }
    ],
  "icons": {
        "32": "Sing Sign.png"
    },
  "permissions": ["scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
  {
    "matches": ["*://open.spotify.com/*"],
    "js": ["contentScript.js"]
  }
]
}
